<!-- EditContactView.ui.xml -->
<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
    xmlns:g='urn:import:com.google.gwt.user.client.ui'>

  <ui:style>
	.content {
	}
	
	.menuPanel {
		margin: 10px 0;
	}
	
	.toolbar {
		background: #d9e7f8;
		width: 100%;
		margin: 5px 0;
		padding: 5px;
	}
  </ui:style>
  
  <g:HTMLPanel styleName="{style.content}">
  
  	<g:HorizontalPanel styleName="{style.toolbar}">
  		<g:FlowPanel>
  			<g:Button ui:field="listButton" text="Lista" />
  		</g:FlowPanel>
  	</g:HorizontalPanel>
	
	<g:HorizontalPanel>
		<g:HTMLPanel>
		<table>
			<tr><td>Firstname:</td><td>
			<g:TextBox ui:field="firstName" /></td></tr> 
			<tr><td>Lastname:</td><td>
			<g:TextBox ui:field="lastName" /></td></tr>
			<tr><td>Email Address:</td><td>
			<g:TextBox ui:field="emailAddress" /></td></tr>
		</table>
		</g:HTMLPanel>
	</g:HorizontalPanel>

	<g:HorizontalPanel ui:field="menuPanel" styleName="{style.menuPanel}">
		<g:Button ui:field="submitButton" text="Submit" />
		<g:Button ui:field="cancelButton" text="Cancel" />
	</g:HorizontalPanel>

  </g:HTMLPanel>

</ui:UiBinder>