<!-- MainView.ui.xml -->
<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
    xmlns:g='urn:import:com.google.gwt.user.client.ui'>

  <ui:style>
	.content {
		width: 100%;
	}
	
	.section {
		background: #eee;
		margin: 5px 0;
		padding: 5px;
	}
  </ui:style>
  
  <g:HTMLPanel styleName="{style.content}">
  	<g:HTML styleName="{style.section}">GWT-INV :: CONTACT</g:HTML>
  	<g:SimplePanel ui:field="contentPanel" />
  </g:HTMLPanel>

</ui:UiBinder>