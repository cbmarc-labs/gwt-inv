<!-- MainView.ui.xml -->
<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
    xmlns:g='urn:import:com.google.gwt.user.client.ui' xmlns:i="urn:import:cbmarc.inventory.client.ui">

  <ui:style>
	.content {
		width: 100%;
	}
	
	.toolbar {
		background: #d9e7f8;
		width: 100%;
		margin: 5px 0;
		padding: 5px;
	}
	
	.contactsTable {
		width: 100%;
		background: #eee;
		text-align: left;
	}
  </ui:style>
  
  <g:HTMLPanel styleName="{style.content}">
  	<g:FlowPanel styleName="{style.toolbar}">
  		<g:Button ui:field="addButton" text="Nuevo" />
  		<g:Button ui:field="deleteButton" text="Borrar" />
  	</g:FlowPanel>

  	<i:CFlexTable ui:field="contactsTable" styleName="{style.contactsTable}" />
  </g:HTMLPanel>
</ui:UiBinder>