<!-- MainView.ui.xml -->
<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
    xmlns:g='urn:import:com.google.gwt.user.client.ui'>

  <ui:style>
	.content {
		min-width:740px;
		width: 100%;
		background-color: #eee;
	}
	
	.izquierda {
		width: 20em;
		border: 1px solid #000;
	}
	
	.derecha {
		width: 100%;
		border: 1px solid #000;
	}
  </ui:style>
  
  <g:VerticalPanel ui:field="mainPanel" styleName="{style.content}">
  	<g:HTML>HOLA MUNDO !!!</g:HTML>
  	
  	<g:HorizontalPanel>
  		<g:SimplePanel styleName="{style.izquierda}">
  			<g:Tree ui:field="mainMenu"></g:Tree>
  		</g:SimplePanel>
  		
  		<g:SimplePanel ui:field="contentPanel" styleName="{style.derecha}" />
  	</g:HorizontalPanel>
  </g:VerticalPanel>

</ui:UiBinder>